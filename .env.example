# =================================
# DigiAnalise - Environment Variables
# =================================

# Database
DATABASE_URL="file:./dev.db"

# Gemini AI API
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-2.0-flash-lite"

# Application
NODE_ENV="development"

# Data Processing
BATCH_SIZE=100
MAX_RETRIES=3
RATE_LIMIT_DELAY=1000

# Logging
LOG_LEVEL="info"

# =================================
# PRODUCTION ONLY VARIABLES
# =================================

# Database (Production - PostgreSQL)
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Application (Production)
# NODE_ENV="production"

# Security (Production)
# NEXTAUTH_SECRET="your_super_secure_secret_key_here"
# NEXTAUTH_URL="https://digianalise.pmvc.ba.gov.br"

# Monitoring & Analytics (Production)
# SENTRY_DSN="https://your_sentry_dsn_here"
# VERCEL_URL="your_vercel_deployment_url"

# Performance (Production)
# BATCH_SIZE=200
# RATE_LIMIT_DELAY=500
# LOG_LEVEL="error"

# SSL & Security (Production)
# FORCE_HTTPS=true
# SECURE_COOKIES=true